	<element name="Drain" type="Spell" source="Hazars Content" id="ID_HC_SPELL_DRAIN">
		<supports>White Mage</supports>
		<description>
			<p>You deal 2d8 points of necrotic damage to a single target within line of sight and within 30 feet of you</p>
